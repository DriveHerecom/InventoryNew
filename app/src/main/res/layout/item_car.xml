<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.creadigol.drivehere.ui.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/lay_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_car"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/lay_tag_at_auction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="#9D25E9"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/view16"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/white_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="6dp" />

                <TextView
                    android:id="@+id/tv_tag_at_auction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="serif"
                    android:text="At Auction"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view16" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/lay_tag_scan_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="#234CF3"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/view15"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/white_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="6dp" />

                <TextView
                    android:id="@+id/tv_tag_scan_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Scan 2 day ago"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view15" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:background="#66000000"
                android:fontFamily="monospace"
                android:gravity="center_horizontal"
                android:text="2010 chevrolet cruse"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:layout_constraintBottom_toBottomOf="@+id/iv_car"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_car">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp">
                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cn_detials"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent">
                        <TextView
                            android:id="@+id/tv_lot_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="DHP-05"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textView6"
                            app:layout_constraintTop_toBottomOf="@+id/tv_rfid" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Lot"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_lot_code"
                            app:layout_constraintStart_toStartOf="@+id/gl_rfid" />

                        <TextView
                            android:id="@+id/tv_rfid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="000022"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textView6"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Rfid"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_rfid"
                            app:layout_constraintStart_toStartOf="@+id/gl_rfid" />

                        <android.support.constraint.Guideline
                            android:id="@+id/gl_rfid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.6" />

                        <TextView
                            android:id="@+id/tv_vin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="19UYA31581L000000"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textView4"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="8dp"
                            android:text="vin"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_vin"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Miles"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_miles"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_miles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="256.78"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textView4"
                            app:layout_constraintTop_toBottomOf="@+id/tv_vin" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_miles" />
                        <View
                            android:id="@+id/view"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintBottom_toBottomOf="@+id/view2"
                            app:layout_constraintEnd_toStartOf="@+id/gl_rfid"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cn_auction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/cn_detials">

                        <TextView
                            android:id="@+id/tvAuctionName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="JOHN"
                            android:maxEms="13"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textAuctionName" />

                        <TextView
                            android:id="@+id/textAuctionName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Auction Name"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tvAuctionName"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvFloorPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="5000"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textFloorPrice"
                            app:layout_constraintTop_toBottomOf="@+id/tvAuctionName"/>
                        <TextView
                            android:id="@+id/textFloorPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Floor Price"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tvFloorPrice"
                            app:layout_constraintStart_toStartOf="parent" />
                        <TextView
                            android:id="@+id/textAuctionMile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Auction Mile"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tvFloorPrice"
                            app:layout_constraintStart_toStartOf="@+id/gl_auction" />

                        <TextView
                            android:id="@+id/tvAuctionMile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="Yes"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textAuctionMile"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tvFloorPrice" />

                        <TextView
                            android:id="@+id/tvAuctionDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="27/10/2017"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textAuctionDate"
                            app:layout_constraintTop_toBottomOf="@+id/textFloorPrice"/>
                        <TextView
                            android:id="@+id/textAuctionDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Auction Date"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tvAuctionDate"
                            app:layout_constraintStart_toStartOf="parent" />


                        <TextView
                            android:id="@+id/textCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Condition"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tvCondition"
                            app:layout_constraintStart_toStartOf="@+id/gl_auction" />

                        <TextView
                            android:id="@+id/tvCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textCondition"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tvAuctionDate" />

                        <android.support.constraint.Guideline
                            android:id="@+id/gl_auction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.6" />

                        <View
                            android:id="@+id/viewAuction"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintBottom_toBottomOf="@+id/tvCondition"
                            app:layout_constraintEnd_toStartOf="@+id/gl_auction"
                            app:layout_constraintTop_toTopOf="@+id/tvFloorPrice" />

                       <!-- <View
                            android:id="@+id/view_Auction"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintTop_toBottomOf="@+id/tvCondition" />-->
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cn_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cn_auction">
                        <android.support.constraint.Guideline
                            android:id="@+id/gl_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.55" />
                        <TextView
                            android:id="@+id/tv_stock_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:text="P067661"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textView16"
                            app:layout_constraintTop_toBottomOf="@+id/tv_vacancy" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="StockNo"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_stock_no"
                            app:layout_constraintStart_toStartOf="@+id/gl_details" />

                        <TextView
                            android:id="@+id/tv_vacancy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textView14" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Vacancy"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_vacancy"
                            app:layout_constraintStart_toStartOf="@+id/gl_details" />

                        <TextView
                            android:id="@+id/tv_problem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:text="Front Light"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textView12"
                            app:layout_constraintTop_toBottomOf="@+id/tv_stage" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Problem"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_problem"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_stage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:text="Ready"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/textView10"/>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Stage"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_stage"
                            app:layout_constraintStart_toStartOf="parent" />
                        <!--<View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_problem" />-->
                        <View
                            android:id="@+id/view3"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_problem"
                            app:layout_constraintEnd_toStartOf="@+id/gl_details"
                            app:layout_constraintTop_toTopOf="@+id/tv_stage" />
                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cn_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/cn_search">
                        <View
                            android:id="@+id/view_Notes"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/tv_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="Need to be done in stage MC"
                            android:textColor="#a15a84"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView18" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Note"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="11sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_note"
                            app:layout_constraintStart_toStartOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.Guideline
                    android:id="@+id/guideline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.55" />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.yukti.driveherenew.search.WebPicsHistoryActivity">

    <include
        android:id="@+id/activity_web_pics_history_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/app_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_addPics"
        android:layout_below="@+id/activity_web_pics_history_app_bar">

        <TextView
            android:id="@+id/tv_no_pics"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Web Pics Found"
            android:textSize="20sp"/>

        <ScrollView
            android:id="@+id/webpicHistoryScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:id="@+id/ll_webPics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </ScrollView>

    </FrameLayout>

    <Button
        android:id="@+id/btn_addPics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn"
        android:text="Add more Pictures"
        android:textColor="@android:color/white" />

</RelativeLayout>

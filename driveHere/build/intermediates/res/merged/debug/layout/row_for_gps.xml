<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/search_row_padding_bottom"
            android:paddingTop="@dimen/search_row_padding_top" >

            <TextView
                android:id="@+id/tv_gps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="  Gps"
                android:textColor="@color/darkgray"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_gps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.79"
                android:singleLine="true"
                android:textColor="@color/darkgray"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_gpsscan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="  Scan"
                android:textColor="@color/darkgray"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.23"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_plus" />

                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_minus"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/Android%20Studio/DriveHere/driveHere/src/main/res/layout/row_for_gps.xml -->
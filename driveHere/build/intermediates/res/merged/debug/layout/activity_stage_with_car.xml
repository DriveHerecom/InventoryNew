<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

   <include
        android:id="@+id/activity_stage_with_car_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/app_toolbarforstorage" /> 

    <LinearLayout
        android:id="@+id/ll_container_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_stage_data"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Found Nothing !"
            android:textSize="20sp"
            android:textColor="@color/accentColor"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCarDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

</LinearLayout><!-- From: file:/E:/Android%20Studio/DriveHere/driveHere/src/main/res/layout/activity_stage_with_car.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.yukti.newchanges.fragment.ServiceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="3dp">

                <EditText
                    android:id="@+id/service_stage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/ser_stage"
                    android:paddingBottom="@dimen/search_row_padding_bottom"
                    android:paddingTop="@dimen/search_row_padding_top"
                    android:textColor="@color/text_color_search"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="3dp">

                <EditText
                    android:id="@+id/problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/ser_problem"
                    android:paddingBottom="@dimen/search_row_padding_bottom"
                    android:paddingTop="@dimen/search_row_padding_top"
                    android:textColor="@color/text_color_search"
                    android:textSize="15sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="3dp">

                <EditText
                    android:id="@+id/done_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/ser_doneDate"
                    android:inputType="text"
                    android:paddingBottom="@dimen/search_row_padding_bottom"
                    android:paddingTop="@dimen/search_row_padding_top"
                    android:textColor="@color/text_color_search"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="3dp">

                <EditText
                    android:id="@+id/done_dateLotcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/ser_doneDateLotcode"
                    android:inputType="text"
                    android:paddingBottom="@dimen/search_row_padding_bottom"
                    android:paddingTop="@dimen/search_row_padding_top"
                    android:textColor="@color/text_color_search"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="3dp">

                <EditText
                    android:id="@+id/edt_MechanicSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:hint="@string/ser_Meachanic"
                    android:inputType="text"
                    android:paddingBottom="@dimen/search_row_padding_bottom"
                    android:paddingTop="@dimen/search_row_padding_top"
                    android:textColor="@color/text_color_search"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.yukti.newchanges.Activity.SearchActivity">

    <include
        android:id="@+id/tb_search"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_primary"
            android:text="@string/apply_reset"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_applyFilter"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_primary"
            android:gravity="center"
            android:text="@string/apply_filter"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_search"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="120dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="110dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/vw_basic"
                            android:layout_width="10dp"
                            android:layout_height="110dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll_basic"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/black"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_basic"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/wh_basic_search" />

                            <TextView
                                android:id="@+id/tv_basic"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Basic"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="110dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/black"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/vw_carDetails"
                            android:layout_width="10dp"
                            android:layout_height="110dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll_carDetails"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/black"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_carDetails"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/wh_cardtail_search" />

                            <TextView
                                android:id="@+id/tv_carDetails"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Car Details"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="110dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/vw_statuses"
                            android:layout_width="10dp"
                            android:layout_height="110dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll_statuses"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/black"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_statuses"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/wh_status_search" />

                            <TextView
                                android:id="@+id/tv_statuses"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Statuses"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/vw_service"
                            android:layout_width="10dp"
                            android:layout_height="110dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll_service"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/black"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_service"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/wh_service_search" />

                            <TextView
                                android:id="@+id/tv_service"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Service"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/vw_auction"
                            android:layout_width="10dp"
                            android:layout_height="110dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll_auction"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/black"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_auction"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/wh_auction_search" />

                            <TextView
                                android:id="@+id/tv_auction"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Auction"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <FrameLayout
                android:id="@+id/fm_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <include
        android:id="@+id/activity_search_past_contract"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_search_past_contract"
        android:layout_marginBottom="40dp">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/search"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    app:cardCornerRadius="3dp">

                    <EditText
                        android:id="@+id/customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:focusableInTouchMode="true"
                        android:hint="Enter Customer Name"
                        android:textColorHint="@color/lightgray"
                        android:paddingBottom="@dimen/search_row_padding_bottom"
                        android:paddingTop="@dimen/search_row_padding_top"
                        android:textColor="#CC2900"
                        android:textSize="18sp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    app:cardCornerRadius="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_car_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:focusableInTouchMode="true"
                            android:hint="Enter Vin"
                            android:textColorHint="@color/lightgray"
                            android:maxLength="17"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            android:paddingBottom="@dimen/search_row_padding_bottom"
                            android:paddingTop="@dimen/search_row_padding_top"
                            android:text=""
                            android:textColor="#CC2900"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_scan_vin1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@drawable/scan"
                            android:text=""
                            android:textColor="#9A9999"
                            android:textSize="15sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    app:cardCornerRadius="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_rfid_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:hint="Enter RFID"
                            android:maxLength="17"
                            android:paddingBottom="@dimen/search_row_padding_bottom"
                            android:paddingTop="@dimen/search_row_padding_top"
                            android:text=""
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_scan_rfid1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@drawable/scan"
                            android:text=""
                            android:textColor="#9A9999"
                            android:textSize="15sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    app:cardCornerRadius="3dp">

                    <EditText
                        android:id="@+id/edt_stockNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:focusableInTouchMode="true"
                        android:hint="Enter Stock Number"
                        android:paddingBottom="@dimen/search_row_padding_bottom"
                        android:paddingTop="@dimen/search_row_padding_top"
                        android:textColor="#CC2900"
                        android:textColorHint="@color/lightgray"
                        android:textSize="18sp"

                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    app:cardCornerRadius="3dp">

                    <EditText
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:id="@+id/contract_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:focusableInTouchMode="true"
                        android:hint="Enter Contract Number"
                        android:inputType="number"
                        android:textColorHint="@color/lightgray"
                        android:paddingBottom="@dimen/search_row_padding_bottom"
                        android:paddingTop="@dimen/search_row_padding_top"
                        android:textColor="#CC2900"
                        android:textSize="18sp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    app:cardCornerRadius="3dp">

                    <EditText
                        android:id="@+id/vehicle_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:focusableInTouchMode="true"
                        android:hint="Enter TAG"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:textColorHint="@color/lightgray"
                        android:paddingBottom="@dimen/search_row_padding_bottom"
                        android:paddingTop="@dimen/search_row_padding_top"
                        android:textColor="#CC2900"
                        android:textSize="18sp" />

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/search_past_contract"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_selector_orange"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/searchTxtPC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEARCH"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/Android%20Studio/DriveHere/driveHere/src/main/res/layout/activity_past_contract.xml -->
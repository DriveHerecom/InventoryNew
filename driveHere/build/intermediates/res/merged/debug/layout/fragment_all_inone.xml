<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yukti.drivehere"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingBottom="25dp"
                    android:text="Inforamation"
                    android:textColor="#869CA7"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_stock_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter stock number"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_vehicleproblem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Select problem"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_vehiclenote"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Note"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_company"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:hint="Enter Company"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_vehiclepurchaseform"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:hint="Enter purchase from"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_inspectiondate"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:hint="Inspection Date"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_registrationdate"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:hint="Registration Date"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_insurance_date"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:hint="Insurance Date"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_gasetank"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:hint="Select Gastank"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>

                <!--<EditText
                    android:carId="@+carId/edt_hastitle"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:hint="Select Has Title"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>-->

                <EditText
                    android:id="@+id/edt_locationtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:hint="Select location title"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_vehiclesalesprice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter sales price"
                    android:inputType="number"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/edt_mechanic"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:hint="Enter Mechanic"
                    android:padding="5dp"
                    android:singleLine="true"></EditText>

                <TextView
                    android:id="@+id/tv_Company_Insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingBottom="5dp"
                    android:text="Company Insurance"
                    android:textColor="#869CA7"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btnInsuraancePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add Photo"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_selector_primary"/>
                <ImageView
                    android:id="@+id/iv_companyinsurance"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"></ImageView>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_nextallinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/btn"
            android:text="Next"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/Android%20Studio/DriveHere/driveHere/src/main/res/layout/fragment_all_inone.xml -->
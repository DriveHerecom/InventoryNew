<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yukti.driveherenew.search.GalleryActivity" >


        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gallery_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:background="@color/black"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/photoCountContainer"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|bottom"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="1dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera_mini" />

                <TextView
                    android:id="@+id/index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
        
        
    <include
        android:id="@+id/activity_gallery_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        layout="@layout/app_bar_transparent" />
    

</FrameLayout>
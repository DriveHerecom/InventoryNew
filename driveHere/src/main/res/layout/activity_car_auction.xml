<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_car_auction_app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/camera_send"
        android:layout_below="@+id/activity_car_auction_app_bar"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auction Name : "
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    />

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:elevation="10dp"
        wheel:cardCornerRadius="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_auction_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Select Auction name"
                    android:textColorHint="@color/gray"
                    android:background="@color/white"
                    android:drawableRight="@drawable/iv_black"
                    android:focusable="false"
                    android:paddingLeft="10dp"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/orange"
                    android:textSize="15sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Floor Price :"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    wheel:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_floor_price"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"

                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:hint="Enter Price"
                        android:textColor="@color/orange"
                        android:paddingLeft="10dp"
                        android:textSize="15sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Condition :"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    wheel:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_condition"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"

                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:singleLine="true"
                        android:hint="Select Condition"
                        android:drawableRight="@drawable/iv_black"
                        android:textColor="@color/orange"
                        android:paddingLeft="10dp"
                        android:textSize="15sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Miles :"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    wheel:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_miles"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"

                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:hint="Enter Miles"
                        android:textColor="@color/orange"
                        android:paddingLeft="10dp"
                        android:textSize="15sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note :"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    wheel:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_note"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:inputType="text"
                        android:singleLine="true"
                        android:hint="Enter Note"
                        android:textColor="@color/orange"
                        android:paddingLeft="10dp"
                        android:textSize="15sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auction Date :"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    wheel:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_auctiondate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:singleLine="true"
                        android:hint="Select Auction Date"
                        android:textColor="@color/orange"
                        android:paddingLeft="10dp"
                        android:textSize="15sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

          <!--  <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
